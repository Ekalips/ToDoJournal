<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout2">

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_to_do"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.56" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_to_do_alarm_time"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:maxLines="1"
        android:text="KEKEKEKEKKE"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/detailed_to_do"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:src="@drawable/alarm_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_to_do_alarm_button"
        app:layout_constraintBaseline_creator="@+id/detailed_to_do_alarm_time"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:contentDescription="Add alarm"
        app:layout_constraintTop_toBottomOf="@+id/detailed_to_do_alarm_time"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:text="Set reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_to_do_alarm_label"

        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/detailed_to_do_alarm_button"
        app:layout_constraintRight_toLeftOf="@+id/detailed_to_do_alarm_button"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailed_to_do_alarm_button" />

    <ImageButton
        android:src="@drawable/alarm_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_to_do_alarm_cancel"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/detailed_to_do_alarm_time"
        app:layout_constraintRight_toLeftOf="@+id/detailed_to_do_alarm_button"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailed_to_do_alarm_time" />


</android.support.constraint.ConstraintLayout>